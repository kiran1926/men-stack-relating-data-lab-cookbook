<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Link to the custom styles.css file -->
    <link rel="stylesheet" href="/css/style.css">
    <title>Add a new recipe</title>
</head>

<body>
    <%- include("../partials/_navbar.ejs") %>

    <div class="container form-container">
        <h1 class="text-center">Add a New Recipe</h1>
        <form action="/users/<%= user._id%>/recipes" method="POST" class="recipe-form">
            <div class="form-group mb-4">
                <label for="name">Recipe Name:</label>
                <input type="text" name="name" class="form-control" required>
            </div>

            <div class="form-group mb-4">
                <label for="instructions">Instructions:</label>
                <textarea name="instructions" class="form-control" rows="4" required></textarea>
            </div>

            <div class="form-group mb-4">
                <label>Ingredients:</label>
                <div>
                    <% ingredients.forEach(ingredient => { %>
                    <div class="ingredient-option">
                        <input type="checkbox" name="ingredients[]" value="<%= ingredient._id %>">
                        <label><%= ingredient.name %></label>
                    </div>
                    <% }); %>
                </div>
                <div id="new-ingredient" class="mt-3">
                    <input type="text" name="newIngredient" class="form-control" placeholder="Enter a new ingredient">
                </div>
            </div>

            <button type="submit" class="btn btn-submit">Save Recipe</button>
        </form>
    </div>
</body>

</html>
